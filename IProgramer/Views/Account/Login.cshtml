@model IProgramer.ViewModel.LoginViewModel

<head>
    <link rel="stylesheet" type="text/css" href="/css/StyleLog.css">
</head>

<body>
    <header class="header">

        <div class="container">
            <nav class="nav-wraper">
                <div class="logo"><span>Название</span>Сайта</div>

                <ul class="nav">
                    <li class="nav__item">
                        <a class="nav__link" asp-action="Login" asp-controller="Account">Главная</a>
                    </li>
                    <li class="nav__item">
                        <a class="nav__link" href="#">Вторичная</a>
                    </li>
                    <li class="nav__item">
                        <a class="nav__link" href="#">Последовательная</a>
                    </li>
                    <li class="nav__item">
                        <a class="nav__link" href="#">Последовательная</a>
                    </li>
                    <li class="nav__item">
                        <a class="nav__link" href="#">Последовательная</a>
                    </li>
                </ul>
            </nav>

            <div class="header-content">
                <div class="header-desc">
                    <h1 class="header__title">Главний заголовок</h1>

                    <div class="header__text">
                        <p>Какойто текст</p>
                    </div>

                    <a asp-action="Register" asp-controller="Account" class="header__btn">Кнопка</a>
                </div>
                <div class="sign__content">
                    <form class="form-signin" method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                        <div asp-validation-summary="ModelOnly"></div>
                        <h1 class="h3 mb-3 font-weight-normal">Авторизация</h1>
                        <label asp-for="Login" class="sr-only">Login</label>
                        <input type="text" asp-for="Login" class="form-control" placeholder="Логин" required="" autofocus=""><br />
                        <label asp-for="Password" class="sr-only">Password</label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Пароль" required="">
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" value="remember-me"> Запомнить меня
                            </label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Авторизироватся</button>
                    </form>
                </div>
            </div>


            <div class="header__social">
                <a class="header__social-item" href="#"><i class="fab fa-vk"></i></a>
                <a class="header__social-item" href="#"><i class="fab fa-instagram"></i></a>
                <a class="header__social-item" href="#"><i class="fab fa-google-plus-g"></i></a>
            </div>
        </div>
    </header>

    <footer class="footer">
        <p>Условия пользователя и Политика конфиденциальности</p>
    </footer>
</body>



